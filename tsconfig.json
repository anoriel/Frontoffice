{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Vue specific */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./front/*"
      ],
      "vue": [
        "./node_modules/vue"
      ]
    },
    "types": [
      "vite/client",
      "node",
      "jest"
    ]
  },
  "include": [
    "front/**/*.ts",
    "front/**/*.tsx",
    "front/**/*.vue",
    "front/**/*.d.ts",
    "front/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}